<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Chat Messages Container -->

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="646dp"
        app:srcCompat="@drawable/medium_header" />

    <ImageView
        android:id="@+id/ChatSenderIcon"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginStart="261dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_profile" />

    <ScrollView
        android:id="@+id/chatScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/messageContainer">

        <LinearLayout
            android:id="@+id/chatMessagesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <!-- Sample conversation about dorm information -->
            <!-- User message (aligned to the right) -->
            <!-- Dorm's response (aligned to the left) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Sure! Our dorm has free Wi-Fi, laundry facilities, a shared kitchen, and 24/7 security." />
        </LinearLayout>

    </ScrollView>

    <!-- Message Input Container -->

    <LinearLayout
        android:id="@+id/messageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Attachment Button -->
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_attachment"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Attachment Button"
            android:id="@+id/attachmentButton" />

        <!-- Text Input Field -->
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type a message..."
            android:textSize="20sp"
            android:id="@+id/messageInput"
            android:drawableEnd="@drawable/baseline_send_24"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="-4dp"
        app:srcCompat="@drawable/respponder_bubble" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="266dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/sender_bubble" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="239dp"
        android:layout_height="100dp"
        android:layout_above="@+id/messageContainer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="37dp"
        android:text="Sure! Our dorm has free Wi-Fi, laundry facilities, a shared kitchen, and 24/7 security."
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messageContainer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="168dp"
        android:text="Can you tell me about the dorm facilities?"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/ChatReceiverIcon"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="130dp"
        android:layout_toStartOf="@+id/textView4"
        android:src="@drawable/profile" />

    <ImageView
        android:id="@+id/chatReceiverIcon"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginEnd="-23dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="560dp"
        android:layout_toStartOf="@+id/textView4"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="128dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="25dp"
        android:text="Arnold Lingat"
        android:textColor="@color/darkest"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="363dp"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="353dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="22dp"
        app:srcCompat="@drawable/baseline_more_vert_24" />

</RelativeLayout>



